{
  "name": "lnpixels",
  "version": "1.0.0",
  "description": "LNPixels project",
  "scripts": {
    "dev:api": "pnpm --filter api dev",
    "dev:app": "pnpm --filter lnpixels-app dev",
    "dev:all": "pnpm --parallel --filter \"api\" --filter \"lnpixels-app\" dev",
    "build": "pnpm --filter api build && pnpm --filter lnpixels-app build",
    "test": "pnpm --filter api test && pnpm --filter lnpixels-app test",
    "install-all": "pnpm install"
  },
  "devDependencies": {
    "happy-dom": "^18.0.1"
  }
}
